<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd" version="1.0">

    <!-- Tutorial "unit" -->
    <persistence-unit name="Tutorial">
        <properties>
            <property name="datanucleus.ConnectionURL" value="jdbc:derby:registry;create=true"/>
            <property name="javax.jdo.option.ConnectionDriverName" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="datanucleus.autoCreateSchema" value="true" />
            <property name="datanucleus.generateSchema.database.mode" value="create"/>
        </properties>
    </persistence-unit>

</persistence>